<%= form_for @task do |f| %>
  <%= f.label :title, "Enter a task" %>
  <%= f.text_field :title %>
  <%= f.label :title, "Details" %>
  <%= f.text_field :details %>
  <%= f.label :title, "Task done ?" %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

